# MorphoStruct Backend Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# Environment: development, staging, production
ENV=development

# Security secrets - REQUIRED in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=
ENCRYPTION_SECRET=

# =============================================================================
# CORS & NETWORK
# =============================================================================

# Comma-separated list of allowed frontend origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Trusted proxy IPs for X-Forwarded-For header (comma-separated)
# Only set this if behind a reverse proxy (nginx, cloudflare, etc.)
# Example: TRUSTED_PROXY_IPS=10.0.0.1,10.0.0.2
TRUSTED_PROXY_IPS=

# =============================================================================
# DATABASE
# =============================================================================

# SQLite (development) or PostgreSQL (production)
DATABASE_URL=sqlite:///./morphostruct.db
# DATABASE_URL=postgresql://user:password@localhost:5432/morphostruct

# =============================================================================
# OPTIONAL - PRODUCTION SCALING
# =============================================================================

# Redis for distributed rate limiting (required for multi-instance deployments)
# REDIS_URL=redis://localhost:6379/0
